@model IEnumerable<SmartManage.Models.Bill>

<div clss="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-dark">Bill List</h2>
        </div>
        <div class="col-6 text-md-right">
            <a class="btn btn-primary" asp-controller="Bill" asp-action="AddBill">Add Bill</a>
        </div>
    </div>
    <br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        First Name
                    </th>
                    <th>
                        Last Name
                    </th>
                    <th>
                        Bill Discription
                    </th>
                    <th>
                        Amount
                    </th>
                    <th>
                        Due Date
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var bill in Model)
                {
                <tr>
                    <td width="18%">@bill.FirstName</td>
                    <td width="18%">@bill.LastName</td>
                    <td width="34%">@bill.Discription</td>
                    <td width="15%">$@bill.Amount</td>
                    <td width="10%">@bill.DueDate.ToShortDateString().ToString()</td>
                    <td width="5%">
                        <a class="btn btn-danger" asp-controller="Bill" asp-action="DeleteBill" asp-route-Id="@bill.Id">Delete</a>
                    </td>
                </tr>
                }

            </tbody>

        </table>
    }
    else
    {
        <p>No bill created yet. ( To add bill: Customer List -> Add Bill )</p>
    }

</div>

